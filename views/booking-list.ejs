<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Booking List</a>
            <a href="/" class="btn btn-light">üè† Home</a>
        </div>
    </nav>

    <div class="container my-4">
        <h2 class="text-center">üìÖ All Bookings</h2>

        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Booking ID</th>
                    <th>Company Name</th>
                    <th>Chairperson</th>
                    <th>Email</th>
                    <th>VC Purpose</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% bookings.forEach(booking => { %>
                    <tr>
                        <td><%= booking.id %></td>
                        <td><%= booking.company_name %></td>
                        <td><%= booking.chairperson %></td>
                        <td><%= booking.email %></td>
                        <td><%= booking.vc_purpose %></td>
                        <td><span class="badge bg-info"><%= booking.status %></span></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <p>¬© <%= new Date().getFullYear() %> VNOC. All rights reserved.</p>
    </footer>

</body>
</html>
