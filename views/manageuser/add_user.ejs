<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Creation</title>
    <link rel="stylesheet" href="/css/add-user.css">
 
    <script defer>
        document.addEventListener('DOMContentLoaded', () => {
            const userForm = document.getElementById('userForm');
        
            if (!userForm) {
                console.error("‚ùå Form not found! Check your HTML.");
                return;
            }
        
            console.log("‚úÖ Form found, attaching event listener...");
        
            userForm.addEventListener('submit', (event) => {
                event.preventDefault(); // Prevent default form submission
        
                const userGroup = document.getElementById('userGroup').value;
                const circle = document.getElementById('circle').value;
                const username = document.getElementById('username').value;
                const email = document.getElementById('email').value;
                const phone = document.getElementById('mobileNumber').value;  // ‚úÖ Updated field name
                const status = document.getElementById('status').value;
                const password = document.getElementById('password').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
        
                console.log("üìã Collected form data:", { userGroup, circle, username, email, phone, status });
        
                if (!userGroup || !username || !email || !phone || !status || !password || !confirmPassword) {
                    alert('‚ö†Ô∏è Please fill in all required fields.');
                    return;
                }
        
                if (password !== confirmPassword) {
                    alert('‚ö†Ô∏è Passwords do not match.');
                    return;
                }
        
                // ‚úÖ Correct field names as expected by backend
                const userData = { 
                    user_group: userGroup,  // ‚úÖ Renamed
                    store: circle,          // ‚úÖ Renamed
                    username,
                    email,
                    phone,                  // ‚úÖ Corrected
                    status,
                    password 
                };
        
                fetch('/manageuser/add_user', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(userData),
                })
                .then(response => {
                    if (response.status === 409) {
                        throw new Error("User already exists.");
                    }
                    if (!response.ok) {
                        throw new Error(`HTTP Error! Status: ${response.status}`);
                    }
                    return response.text();
                })
                .then(message => {
                    console.log("‚úÖ Server Response:", message);
                    alert(message || 'User created successfully!');
                    userForm.reset();
                })
                .catch(error => {
                    console.error("‚ùå Error:", error);
                    if (error.message === "User already exists.") {
                        alert("‚ö†Ô∏è User already exists. Please use a different email or username.");
                    } else {
                        alert('An error occurred while creating the user. Please try again.');
                    }
                });
            });
        });        
    </script>
</head>
<body>
    <div class="container">
        <h1>User Creation</h1>
        <form id="userForm">
            <label for="userGroup">User Group</label>
            <select id="userGroup" name="userGroup" required>
                <option value="">Please Select</option>
                <option value="Admin">Admin</option>
                <option value="Store">Store</option>
                <option value="Vnoc">Vnoc</option>
            </select>

            <label for="circle">Store</label>
            <select id="circle" name="circle" required>
                <option value="">Please Select</option>
                <option value="Vashi">Vashi</option>
                <option value="Delhi">Delhi</option>
                <option value="Mumbai">Mumbai</option>
                <option value="Andheri">Andheri</option>
                <option value="Gurugram">Gurugram</option>
                <option value="Indore">Indore</option>
                <option value="Bangalore">Bangalore</option>
                <option value="none">None</option>
            </select>

            <label for="username">User Name</label>
            <input type="text" id="username" name="username" required>

            <label for="email">Email (Login ID)</label>
            <input type="email" id="email" name="email" placeholder="Enter your valid email" required>

            <label for="mobileNumber">Mobile Number</label>
            <input type="text" id="mobileNumber" name="mobileNumber" required>

            <label for="status">Status</label>
            <select id="status" name="status" required>
                <option value="">Please Select</option>
                <option value="active">Active</option>
                <option value="inactive">Hold</option>
            </select>

            <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter password" required>

            <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Re-enter password" required>


            <div class="buttons">
                <input type="submit" value="Submit">
                <input type="reset" value="Reset">
            </div>
        </form>
    </div>
</body>
</html>
