<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VNOC Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">VNOC Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#reports">üìä Reports</a></li>
                    <li class="nav-item"><a class="nav-link" href="#booking-list">üìÖ Booking List</a></li>
                    <li class="nav-item"><a class="nav-link" href="#vc-track">üé• VC Track</a></li>
                    <li class="nav-item"><a class="nav-link" href="#cancel-requests">‚ùå Cancel Requests</a></li>
                    <li class="nav-item"><a class="nav-link text-danger fw-bold" href="/logout">üö™ Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="bg-primary text-white text-center py-4">
        <h1>Welcome to VNOC Dashboard</h1>
        <p>Manage your video conferences, reports, and bookings efficiently.</p>
    </header>

    <!-- Dashboard Sections -->
    <div class="container my-5">
        <div class="row g-4">

            <!-- Reports Section -->
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5>üìä Reports</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead><tr><th>ID</th><th>Report Type</th><th>Date</th><th>Status</th></tr></thead>
                            <tbody>
                                <% reports.forEach(report => { %>
                                    <tr>
                                        <td><%= report.id %></td>
                                        <td><%= report.type %></td>
                                        <td><%= report.date %></td>
                                        <td><span class="badge bg-success"><%= report.status %></span></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Booking List -->
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h5>üìÖ Booking List</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead><tr><th>Booking ID</th><th>User</th><th>Date</th><th>Status</th></tr></thead>
                            <tbody>
                                <% bookings.forEach(booking => { %>
                                    <tr>
                                        <td><%= booking.id %></td>
                                        <td><%= booking.user %></td>
                                        <td><%= booking.date %></td>
                                        <td><span class="badge bg-info"><%= booking.status %></span></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- VC Track Section -->
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5>üé• VC Track</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead><tr><th>VC ID</th><th>Host</th><th>Start Time</th><th>Zoom Link</th></tr></thead>
                            <tbody>
                                <% vcSessions.forEach(vc => { %>
                                    <tr>
                                        <td><%= vc.id %></td>
                                        <td><%= vc.host %></td>
                                        <td><%= vc.startTime %></td>
                                        <td><a href="<%= vc.link %>" target="_blank" class="btn btn-primary btn-sm">Join</a></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Cancel Request Section -->
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-danger text-white">
                        <h5>‚ùå Cancel Requests</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-danger">
                            <thead><tr><th>Request ID</th><th>User</th><th>Reason</th><th>Action</th></tr></thead>
                            <tbody>
                                <% cancelRequests.forEach(request => { %>
                                    <tr>
                                        <td><%= request.id %></td>
                                        <td><%= request.user %></td>
                                        <td><%= request.reason %></td>
                                        <td><button class="btn btn-danger btn-sm">Approve</button></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3">
        <p class="mb-0">¬© <%= new Date().getFullYear() %> VNOC. All rights reserved.</p>
    </footer>

</body>
</html>
