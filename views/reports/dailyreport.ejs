<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reports</title>
    <link rel="stylesheet" href="/css/clientreport.css">
</head>
<body>
    <h1>Reports</h1>
    
    <div class="form-container">
        <form id="dailyReportsForm">
            <h2>Daily Reports</h2>
            <label for="dailyReportDate">Select Date:</label>
            <input type="date" id="dailyReportDate" name="dailyReportDate" required><br>
            <input type="submit" value="Get Daily Report">
        </form>
    </div>

    <div id="reportResults" class="report-container"></div>

    <script>
        document.getElementById("bookingForm").addEventListener("submit", async function (event) {
            event.preventDefault();
    
            const storeName = document.getElementById("storeName").value;
            const storeEmail = document.getElementById("storeEmail").value;
            const date = document.getElementById("date").value;
            const time = document.getElementById("time").value;
    
            const response = await fetch("/book-vc", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ storeName, storeEmail, date, time })
            });
    
            const result = await response.json();
            alert(result.message);
        });
    </script>
    

</body>
</html>

